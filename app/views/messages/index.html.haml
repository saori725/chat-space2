%header
  .header__message message
.sidebar
  .sidebar__top
    .sidebar__top__name user-name
    %ul.sidebar__top__list
      %li
        = link_to "#" do
          = fa_icon "edit"
      %li
        = link_to "#" do
          = fa_icon "cog"
  .sidebar__bottom
    .sidebar__bottom__list
      .sidebar__bottom__list__group-name group name 
      .sidebar__bottom__list__group-message message 
.main
  .main__header
    .main__header__left
      .main__header__left__group-name group name
      .main__header__left__member MEMBER: 
    .main__header__edit
      %a{:href => ""} edit
  .main__contents
    .main__contents__message-list
      .main__contents__message-list__message
        .main__contents__message-list__message__user-name user-name
        .main__contents__message-list__message__day day
        .main__contents__message-list__message__text text
  .main__footer
    %form.main__footer__body
      %input{:placeholder => "type a message", :type => "text", :class => "input"}
      .image
        = link_to "#" do
          = fa_icon "image"
      %input{:type => "submit", :value => "Send", :class => "submit"}

